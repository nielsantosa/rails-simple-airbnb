<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/300x300/?flat,<%= @flat.name %>');">
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card p-4 bg-light">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card p-4 bg-light mt-4">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %> </p>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card p-4 bg-light">
        <h2>Book this place!</h2>
        <p>form here</p>
      </div>
      <div class="flat-show-card p-4 bg-light mt-4">
        <h2>Details</h2>
        <span class="card-text"><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></span>
        <span class="card-text"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></span>
      </div>
      <div class="flat-show-card p-4 bg-light mt-4 d-flex align-items-center justify-content-between">
        <h2>Share</h2>
        <ul>
          <li><a href="#"><i class="fab fa-facebook-square"></i></a></li>
          <li><a href="#"><i class="fab fa-twitter-square"></i></a></li>
          <li><a href="#"><i class="fab fa-pinterest-square"></i></a></li>
          <li><a href="#"><i class="fas fa-envelope-square"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
