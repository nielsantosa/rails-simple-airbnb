<div class="container my-3">
  <h1>All our Flats</h1>
  <% if @query %>
  <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> out of <%= Flat.count %> on our website.</p>
  <% else %>
  <p>All <%= Flat.count %> flats.</p>
  <% end %>

  <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
      <img src="https://source.unsplash.com/300x300/?flat" class="card-img-top" alt="<%= flat.name %>">
      <div class="card-body bg-light p-4">
        <h4 class="card-title font-weight-bold"><%= flat.name %></h4>
        <p class="card-text"><%= flat.address %></p>
        <span class="card-text"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></span>
        <span class="card-text"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></span>
      </div>
      <div class="card-bot d-flex p-4">
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat), class: "mx-3 text-warning"%>
        <%= link_to "Remove", flat_path(flat), method: :delete, class: "text-danger"%>
      </div>
    </div>
    <% end %>
  </div>
</div>


